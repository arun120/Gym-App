<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.home.gym.Others">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/profile_back"
                android:src="@drawable/sample_user"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY" />
            <View
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/sample_bg"
                android:background="@drawable/bg_gradient"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                />
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_bg"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY" />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dp1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:border_width="5dp"
                app:border_color="#80FFFFFF"
                android:src="@drawable/sample_user"
                android:fitsSystemWindows="true"
                android:elevation="6dp"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/mname"
                android:paddingLeft="100dp"
                android:textColor="#212121"
                android:gravity="center"
                android:paddingRight="10dp"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/dp1"
                android:layout_alignParentLeft="true"
                android:singleLine="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:id="@+id/mmail"
                android:paddingLeft="100dp"
                android:textColor="@color/textSecondary"
                android:gravity="center"
                android:paddingRight="10dp"
                android:layout_below="@+id/mname"
                android:layout_alignParentLeft="true"
                android:singleLine="true" />

        </RelativeLayout>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/tools"
                android:layout_marginTop="10dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                android:id="@+id/id1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent" android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:id="@+id/mail_img"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/mail" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Email"
                            android:textColor="@color/textPrimary"
                            android:id="@+id/email"
                            android:layout_alignTop="@+id/mail_img"
                            android:layout_alignLeft="@+id/mail"
                            android:layout_alignStart="@+id/mail" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="312414104001"
                            android:textColor="@color/textSecondary"
                            android:id="@+id/mail"
                            android:layout_below="@+id/email"
                            android:layout_toRightOf="@+id/mail_img"
                            android:layout_toEndOf="@+id/mail_img"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp" />

                        <View
                            android:layout_below="@+id/mail"
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="2dp"
                            android:background="@color/divider" />
                    </RelativeLayout>
                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent" android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:id="@+id/con_img"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/contact" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Contact"
                            android:textColor="@color/textPrimary"
                            android:id="@+id/con"
                            android:layout_alignTop="@+id/con_img"
                            android:layout_alignLeft="@+id/contact"
                            android:layout_alignStart="@+id/contact" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="312414104001"
                            android:textColor="@color/textSecondary"
                            android:id="@+id/contact"
                            android:layout_below="@+id/con"
                            android:layout_toRightOf="@+id/con_img"
                            android:layout_toEndOf="@+id/con_img"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp" />

                        <View
                            android:layout_below="@+id/contact"
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="2dp"
                            android:background="@color/divider" />
                    </RelativeLayout>
                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent" android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:id="@+id/gen_img"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/gender" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Gender"
                            android:textColor="@color/textPrimary"
                            android:id="@+id/gen"
                            android:layout_alignTop="@+id/gen_img"
                            android:layout_alignLeft="@+id/gender"
                            android:layout_alignStart="@+id/gender" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="312414104001"
                            android:textColor="@color/textSecondary"
                            android:id="@+id/gender"
                            android:layout_below="@+id/gen"
                            android:layout_toRightOf="@+id/gen_img"
                            android:layout_toEndOf="@+id/gen_img"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp" />

                        <View
                            android:layout_below="@+id/gender"
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="2dp"
                            android:background="@color/divider" />
                    </RelativeLayout>
                    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent" android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp"
                            android:id="@+id/oc_img"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/work" />




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Occupation"
                            android:textColor="@color/textPrimary"
                            android:id="@+id/oc"
                            android:layout_alignTop="@+id/oc_img"
                            android:layout_alignLeft="@+id/occupation"
                            android:layout_alignStart="@+id/occupation" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="312414104001"
                            android:textColor="@color/textSecondary"
                            android:id="@+id/occupation"
                            android:layout_below="@+id/oc"
                            android:layout_toRightOf="@+id/oc_img"
                            android:layout_toEndOf="@+id/oc_img"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp" />

                        <View
                            android:layout_below="@+id/occupation"
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="2dp"
                            android:background="@color/divider" />
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>
