<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:background="@drawable/card_select"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_above="@+id/text_card_l"
        android:transitionName="thumbnail"
        android:src="@drawable/sample_user"
        android:id="@+id/card_image" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        >

        <TextView
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Text"
            android:transitionName="maintext"
            android:textColor="@color/textPrimary"
            android:id="@+id/text_card_l"
            android:layout_alignParentLeft="true"
             />

        <TextView
            android:layout_marginTop="5dp"
             android:layout_marginLeft="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Large Text"
            android:transitionName="desc"
            android:textColor="@color/textSecondary"
            android:id="@+id/text_card_m"
            android:layout_below="@+id/text_card_l" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Play"
            android:transitionName="play"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="5dp"
            android:elevation="5dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/card_button_play"
            android:id="@+id/card_play"
            android:drawableLeft="@drawable/ico_select"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/text_card_m"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>